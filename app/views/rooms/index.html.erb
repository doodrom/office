<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table class="table">
  <thead>
    <tr>
      <th>Room</th>
      <th>Staff</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_name %> </td>
        <% room.staffs.each do |s| %>
            <td><%= s.name rescue "unknown" %><br></td>
        <% end %>
        <td></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

